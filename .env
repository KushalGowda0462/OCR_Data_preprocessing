# ========================
# MINIO STORAGE SETTINGS
# ========================
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=document-processing
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_REGION=us-east-1

# ========================
# REDIS SETTINGS
# ========================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ========================
# APPLICATION SETTINGS
# ========================
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=INFO
DEBUG=False

# ========================
# PREPROCESSING CONFIGURATION
# ========================
DESKEW_ENABLED=True
LINE_REMOVAL_ENABLED=True
MAX_DESKEW_ANGLE=15.0

# Ink detection - Blue
BLUE_HUE_MIN=90
BLUE_HUE_MAX=140
BLUE_SAT_THRESHOLD=30
BLUE_VAL_THRESHOLD=30

# Ink detection - Black  
BLACK_VAL_THRESHOLD=50

# Line removal
LINE_KERNEL_WIDTH=51
LINE_KERNEL_HEIGHT=1
LINE_INPAINT_RADIUS=3

# Morphology
CLOSE_KERNEL_SIZE=3
THICKEN_ITERATIONS=1

# Adaptive threshold
ADAPTIVE_BLOCK_SIZE=31
ADAPTIVE_C=15

# ========================
# PROCESSING LIMITS
# ========================
MAX_IMAGE_SIZE_MB=50
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.tiff,.bmp
PROCESSING_TIMEOUT=300

# ========================
# MONITORING
# ========================
METRICS_ENABLED=True
HEALTH_CHECK_ENABLED=True